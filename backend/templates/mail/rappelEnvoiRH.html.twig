{% extends 'mail/base.html.twig' %}

{% block body %}
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="body">
        <tr>
            <td>&nbsp;</td>
            <td class="container">
                <div class="content">

                    <table role="presentation" class="main">

                        <tr>
                            <td class="wrapper">
                                <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td align="center">
                                            <a href="{{ frontUrl }}" referrerpolicy="no-referrer"
                                               target="_blank"
                                               aria-label="Se rendre sur le site AppliPhase de l'université de Bordeaux">
                                                <img border="0" class="img-responsive"
                                                     src="{{ backUrl }}/images/logo-appliphase-email.png"
                                                     alt="" aria-hidden="true" style="max-width: 300px"/></a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                                                <tr>
                                                    <td>
                                                        <h1>
                                                            J-{{ constant('App\\Scheduler\\RappelEnvoiRH\\RappelEnvoiRHHandler::DECLENCHER_J_MOINS') }}
                                                            pour la période du {{ periode.debut|date('d/m/Y') }}
                                                            au {{ periode.fin|date('d/m/Y') }}
                                                        </h1>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p>Bonjour,</p>
                                            <p>Les modifications des interventions sur la période
                                                du {{ periode.debut|date('d/m/Y') }}
                                                au {{ periode.fin|date('d/m/Y') }} vont être bloquées
                                                dans {{ constant('App\\Scheduler\\RappelEnvoiRH\\RappelEnvoiRHHandler::DECLENCHER_J_MOINS') }}
                                                jours,
                                                veuillez vérifier la saisie des événements sur cette période sur
                                                l'application <a href="{{ frontUrl }}">Appliphase</a>.</p>
                                            <p class="last">Cordialement,<br/>
                                                Le service PHASE</p>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                    <div class="footer">

                        <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                            <tr>
                                <td>
                                    <a
                                            href="https://u-bordeaux.fr" referrerpolicy="no-referrer"
                                            target="_blank">
                                        <img border="0" width="50" style="width: 50px"
                                             src="{{ backUrl }}/images/universite-bordeaux-medaillon.png"
                                             alt="Logo Université de Bordeaux"/>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td class="content-block">
                                <span class="apple-link"><a
                                            href="https://u-bordeaux.fr" referrerpolicy="no-referrer"
                                            target="_blank">Université de Bordeaux</a> • <a
                                            href="{{ frontUrl }}" referrerpolicy="no-referrer"
                                            target="_blank">AppliPhase</a></span>
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>
            </td>
            <td>&nbsp;</td>
        </tr>
    </table>
{% endblock %}

